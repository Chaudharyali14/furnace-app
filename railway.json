
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "environment": {
        "NIXPACKS_PHP_VERSION": "8.4",
        "NIXPACKS_NODE_VERSION": "20"
      },
      "buildpacks": [
        "php",
        "node"
      ]
    }
  },
  "deploy": {
    "startCommand": "php artisan migrate --force --seed",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
